<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nsu.onlinejudge.dao.ForgetPasswordTokenMapper">

    <sql id="selectFields">
        user_id, token, expired
    </sql>

    <select id="selectForgetPasswordToken" resultType="ForgetPasswordToken">
        SELECT <include refid="selectFields"></include>
        FROM forget_password_token
        WHERE user_id = #{user_id}
    </select>

    <insert id="insertForgetPasswordToken" parameterType="ForgetPasswordToken">
        INSERT INTO forget_password_token (<include refid="selectFields"></include>)
        VALUES (#{userId}, #{token}, #{expired})
    </insert>

    <update id="updateForgetPasswordToken">
        UPDATE forget_password_token
        SET token = #{token}, expired = #{expired}
        WHERE user_id = #{userId}
    </update>

</mapper>